{
    "name": "Soulsmile",
    "description" : "Soulsmile Browser Extension",
    "version": "1.0",
    "permissions": ["activeTab", "declarativeContent", "storage"],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "manifest_version": 2,
    "page_action": {
        "default_popup": "popup.html",
        "default_icon": {
            "128": "images/soulsmile.png"
        }
    },
    "icons": {
        "128": "images/soulsmile.png"
    },
    "commands": {
        "_execute_browser_action": {
            "suggested_key": {
                "default": "Ctrl+Shift+F",
                "mac": "MacCtrl+Shift+F"
            },
            "description": "Opens soulsmile.html"
        }
    },
    "content_scripts": [
        {
            "matches": ["https://*.amazon.com/*"],
            "js": ["dialog.js"],
            "all_frames": true
        }
    ]
}