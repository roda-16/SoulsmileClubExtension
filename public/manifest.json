{
  "manifest_version": 2,
  "name": "Soulsmile Extension",
  "description": "This extension is a starting point to create a real Chrome extension",
  "version": "0.0.1",
  "browser_action": {
    "default_icon": {               
      "16": "soulsmile.png",
      "24": "soulsmile.png",
      "32": "soulsmile.png",
      "128": "soulsmile.png"
    },
    "default_title": "Open the popup",
    "default_popup": "index.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [{
    "matches": ["https://*.amazon.com/*"],
    "css": [
      "boundary/boundary.css",
      "your-stylesheet-for-boxes.css"
    ],
    "js": [
        "boundary/jquery.js",
        "boundary/boundary.js",
        "notifications.js"
    ],
    "all_frames": false,
    "run_at": "document_end"
  }],
  "icons": {
    "16": "soulsmile.png",
    "48": "soulsmile.png",
    "128": "soulsmile.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-ypW0wr1e+CGRr7YiTWwceJUjgoz6vEZ8WUfw8wlh4es='; object-src 'self'",
  "permissions": ["tabs", "storage"],
  "web_accessible_resources": [
    "boundary/boundary-extra.css",
    "bootstrap.min.css",
    "your-stylesheet-for-elements-within-boxes.css"
  ]
}