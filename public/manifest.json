{
  "manifest_version": 2,
  "name": "Soulsmile Club",
  "description": "Earn back a portion of your online purchases on select websites and donate it to causes you care about without spending any extra.",
  "version": "0.0.0.9",
  "browser_action": {
    "default_icon": {               
      "16": "soulsmile-16.png",
      "24": "soulsmile-24.png",
      "32": "soulsmile-32.png"
    },
    "default_title": "Open the popup",
    "default_popup": "index.html"
  },
  "background": {
    "page": "background.html",
    "persistent": false
  },
  "content_scripts": [{
    "matches": [
      "https://*.cora.life.com/*",
      "https://*.siobeauty.com/*",
      "https://*.biscolatausa.com/*",
      "https://*.fresh.com/us/*",
      "https://*.wetnwildbeauty.com/*",
      "https://*.nordstrom.com/*",
      "https://*.alibris.com/*",
      "https://*.laroche-posay.us/*",
      "https://*.nanoairmask.com/*",
      "https://*.novica.com/*",
      "https://*.astrogaming.com/*",
      "https://*.bluemic.com/*",
      "https://*.ultimateears.com/*",
      "https://*.briogeohair.com/*",
      "https://*.perriconemd.com/*",
      "https://*.bn3th.com/*",
      "https://*.smartbuyglasses.com/*",
      "https://*.getrocketbook.com/*",
      "https://*.bestbuy.com/*",
      "https://*.pillowguy.com/*",
      "https://*.logitech.com/*",
      "https://*.girlfriend.com/*",
      "https://*.earthhero.com/*",
      "https://*.macys.com/*",
      "https://*.champion.com/*",
      "https://www.soulsmile.club/retailers/*",
      "https://*.bellacanvas.com/*",
      "https://*.maidenform.com/*",
      "https://*.splendid.com/*",
      "https://*.outdoorvoices.com/*",
      "https://*.jamesperse.com/*",
      "https://*.7forallmankind.com/*",
      "https://*.herbivorebotanicals.com/*",
      "https://*.buxomcosmetics.com/*",
      "https://*.elfcosmetics.com/*",
      "https://*.moltonbrown.com/*",
      "https://*.honest.com/*",
      "https://*.skinceuticals.com/*",
      "https://*.kerastase-usa.com/*",
      "https://*.benefitcosmetics.com/*",
      "https://*.angelicbakehouse.com/*",
      "https://*.bakedbymelissa.com/*",
      "https://*.drinkhint.com/*",
      "https://*.earthshoes.com/*"
    ],
    "css": [
      "boundary/boundary.css",
      "your-stylesheet-for-boxes.css"
    ],
    "js": [
        "boundary/jquery.js",
        "boundary/boundary.js",
        "notifications.js"
    ],
    "all_frames": false,
    "run_at": "document_idle"
  }],
  "icons": {
    "16": "soulsmile-16.png",
    "48": "soulsmile-48.png",
    "128": "soulsmile-128.png"
  },
  "content_security_policy": "script-src 'self' 'sha256-ypW0wr1e+CGRr7YiTWwceJUjgoz6vEZ8WUfw8wlh4es=' https://apis.google.com https://www.gstatic.com/ https://*.firebaseio.com; object-src 'self'",
  "permissions": ["tabs", "storage"],
  "web_accessible_resources": [
    "boundary/boundary-extra.css",
    "bootstrap.min.css",
    "your-stylesheet-for-elements-within-boxes.css",
    "files/affiliates.json",
    "fonts/*.woff2",
    "fonts/*.woff",
    "fonts/*.ttf",
    "files/checkout.json",
    "files/coupon.json"
  ]
}